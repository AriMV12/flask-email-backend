<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FAF0E6">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:maxWidth="500dp"
            android:layout_gravity="center">

            <!-- Card blanco -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/redondoi"
                android:padding="24dp"
                android:elevation="4dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="8dp"
                android:gravity="center"
                android:clipToPadding="false"
                android:maxWidth="500dp">

                <TextView
                    android:id="@+id/regresarTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Regresar"
                    android:drawableStart="@drawable/iconoa"
                    android:textSize="15sp"
                    android:textColor="#8B4513"
                    android:fontFamily="@font/forte"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="start" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:src="@drawable/cafe1"
                    android:scaleType="centerCrop"
                    android:layout_marginBottom="8dp"
                    app:shapeAppearanceOverlay="@style/CircleImageView" />

                <!-- Título principal -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Crear cuenta"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    android:textColor="#8B4513"
                    android:layout_gravity="start"
                    android:fontFamily="@font/britannicbold"
                    android:layout_marginBottom="15dp" />
                <!-- Email #A3A3A3 -->
                <EditText
                    android:id="@+id/emailEditText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="  E-mail"
                    android:background="@drawable/edittext_bg"
                    android:padding="12dp"
                    android:drawableStart="@drawable/iconocorreo"
                    android:textColor="#000000"
                    android:inputType="textEmailAddress"
                    android:layout_marginBottom="16dp" />

                <!-- Password -->
                <EditText
                    android:id="@+id/passwordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint=" Password"
                    android:drawableStart="@drawable/iconopassword"
                    android:background="@drawable/edittext_bg"
                    android:padding="12dp"
                    android:textColor="#000000"
                    android:inputType="textPassword"
                    android:layout_marginBottom="24dp" />

                <EditText
                    android:id="@+id/confirmEditText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint=" Confirm password"
                    android:drawableStart="@drawable/iconoconfirm"
                    android:background="@drawable/edittext_bg"
                    android:padding="12dp"
                    android:textColor="#000000"
                    android:inputType="textEmailAddress"
                    android:layout_marginBottom="16dp" />


                <!-- Botón acceder -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/loginButton"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Crear"
                    android:textColor="@android:color/white"
                    app:backgroundTint="#228B22"
                    app:cornerRadius="8dp"
                    android:elevation="4dp"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp" />


            </LinearLayout>
        </LinearLayout>

    </FrameLayout>
</ScrollView>