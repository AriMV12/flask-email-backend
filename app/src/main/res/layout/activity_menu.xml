<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

        <TextView
            android:id="@+id/tvDiscovery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="70dp"
            android:text="Menú"
            android:fontFamily="@font/britannicbold"
            android:textColor="#8B4513"
            android:textSize="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <GridLayout
            android:id="@+id/gridCategories"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:columnCount="2"
            android:rowCount="3"
            app:layout_constraintTop_toBottomOf="@id/tvDiscovery"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

                <!-- Primera fila, primera columna: Café -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSnack"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FAF0E6">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                                <ImageView
                                    android:layout_width="130dp"
                                    android:layout_height="130dp"
                                    android:layout_marginBottom="8dp"
                                    android:src="@drawable/iconobebidas"
                                    android:contentDescription="Café" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Café"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:textAlignment="center"
                                    android:textColor="#000000"
                                    android:textSize="15sp" />
                        </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Primera fila, segunda columna: Pastelitos -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardCake"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FAF0E6">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                                <ImageView
                                    android:layout_width="130dp"
                                    android:layout_height="130dp"
                                    android:layout_marginBottom="8dp"
                                    android:src="@drawable/iconopastelitos"
                                    android:contentDescription="pastelitos" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Pastelitos"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:textAlignment="center"
                                    android:textColor="#000000"
                                    android:textSize="15sp" />
                        </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Segunda fila, primera columna: Bebidas -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardCafe"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FAF0E6">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                                <ImageView
                                    android:layout_width="130dp"
                                    android:layout_height="130dp"
                                    android:layout_marginBottom="8dp"
                                    android:src="@drawable/iconobebida"
                                    android:contentDescription="bebidas" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Bebidas"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:textAlignment="center"
                                    android:textColor="#000000"
                                    android:textSize="15sp" />
                        </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Segunda fila, segunda columna: Desayunos -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardGrocery"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FAF0E6">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                                <ImageView
                                    android:layout_width="130dp"
                                    android:layout_height="130dp"
                                    android:layout_marginBottom="8dp"
                                    android:src="@drawable/iconosandiwch"
                                    android:contentDescription="desayunos" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Desayunos"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:textAlignment="center"
                                    android:textColor="#000000"
                                    android:textSize="15sp" />
                        </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Tercera fila, primera columna: Escanea -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardFastFood"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FAF0E6">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                                <ImageView
                                    android:layout_width="130dp"
                                    android:layout_height="130dp"
                                    android:layout_marginBottom="8dp"
                                    android:src="@drawable/iconobarras"
                                    android:contentDescription="codigo barras" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Escanea"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:textAlignment="center"
                                    android:textColor="#000000"
                                    android:textSize="15sp" />
                        </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Tercera fila, segunda columna: Historial de escaneos -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardHealthyFood"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FAF0E6">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                                <ImageView
                                    android:layout_width="130dp"
                                    android:layout_height="130dp"
                                    android:layout_marginBottom="8dp"
                                    android:src="@drawable/iconoebarras"
                                    android:contentDescription="codigo barras" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Historial de escaneos"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:textAlignment="center"
                                    android:textColor="#000000"
                                    android:textSize="15sp" />
                        </LinearLayout>
                </androidx.cardview.widget.CardView>

        </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
